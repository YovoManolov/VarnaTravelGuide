<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListingPlacesActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp">

    <LinearLayout
        android:id="@+id/imageLayoutId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewPlacesHeaderId"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/searhLayoutId"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:weightSum="4"
        android:orientation="horizontal">

        <Button
            android:id="@+id/searchButton"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="20"
            android:paddingStart="15dp"
            android:paddingEnd="0dp"
            android:layout_marginTop="20dp"
            android:singleLine="false"
            android:text="@string/search_label"/>

        <EditText
            android:id="@+id/textToSearch"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="  name of place"
            android:paddingStart="0dp"
            android:paddingEnd="10dp"
            android:singleLine="false" />
    </LinearLayout>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="130dp">

            <ListView
                android:id="@+id/listOfPlaces"
                android:layout_width="wrap_content"
                android:layout_height="380dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/logo" />

        </RelativeLayout>
    </ScrollView>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>